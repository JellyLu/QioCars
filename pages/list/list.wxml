<view>
    <view wx:for="{{cars}}" wx:for-item="car" wx:key="{{objectId}}" class="job">
        <image src="{{car.url}}" mode="aspectFill"/>
        <div>
            <view class="left">
                <view>{{car.brand}}</view>
                <view>{{car.model}}</view>
                <view>{{car.price}}</view>
            </view>
            <view class="right">
                <button size="mini" bindtap="transitionToUpdate" data-id="{{car.objectId}}">编辑</button>
                <button size="mini" type="warn" data-id="{{car.objectId}}" bindtap="deleteCar">删除</button>
            </view>
        </div>
    </view>
    <button class="btn" bindtap="transitionToCar">创建内推职位</button>
</view>